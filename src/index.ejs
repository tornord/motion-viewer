<html>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link href="//vjs.zencdn.net/7.3.0/video-js.min.css" rel="stylesheet" />
	</head>
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Varela+Round&amp;display=swap">
	<style>
		body {
			color: #ccc;
			background: rgb(48, 45, 45);
			font-family: 'Varela Round';
		}
		a {
			color: #ccc;
		}
		.videos {
			display: flex;
			flex-wrap: wrap;
		}
		.video {
			flex: 1;
			max-width: 320px;
			margin-left: 10px;
                margin-right: 10px;
		}
		.video p {
			margin-top: 1.2rem;
                margin-bottom: 0.4rem;
		}
		.links {
			margin-left: 10px;
		}
	</style>
	<body>
		<p class="links">
		<% if (earlierPage!==null) { %>	
			<a href=<%= `/?page=${earlierPage}${limit!==defaultLimit?"&limit="+limit:""}` %>>Earlier</a>
		<% } %>
		<% if (earlierPage!==null && laterPage!==null) { %>	
			&nbsp;
		<% } %>
		<% if (laterPage!==null) { %>	
			<a href=<%= `/?page=${laterPage}${limit!==defaultLimit?"&limit="+limit:""}` %>>Later</a>
		<% } %>
		</p>
		<div class="videos">
			<% videos.forEach(v => { %>
				<div class="video">
					<p><%= `${v.date} ${v.time}` %></p>
					<video id="my-player" class="video-js" controls preload="none" data-setup="{}" poster=<%= `/videos/${v.posterUrl}` %>
						width="320" height="240" >
						<source src=<%= `/videos/${v.url}` %> type="video/mp4" />
					</video>
				</div>
			<% }) %>	
		</div>

		<script src="//vjs.zencdn.net/7.3.0/video.min.js"></script>
		<script crossorigin src="https://unpkg.com/react@16/umd/react.development.js"></script>
		<script crossorigin src="https://unpkg.com/react-dom@16/umd/react-dom.development.js"></script>
	</body>
</html>
